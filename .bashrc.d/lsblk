# vim: set autoindent smartindent ts=4 sw=4 sts=4 noet filetype=sh:

if type lsblk > /dev/null 2>&1; then
	if type grep > /dev/null 2>&1; then
		alias lsb="lsblk -o NAME,MAJ:MIN,SIZE,RO,TYPE,FSTYPE,LABEL,MOUNTPOINT|grep -v ^loop"
	else
		alias lsb="lsblk -o NAME,MAJ:MIN,SIZE,RO,TYPE,FSTYPE,LABEL,MOUNTPOINT"
	fi
fi
