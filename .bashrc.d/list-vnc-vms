# vim: set autoindent smartindent tabstop=2 shiftwidth=2 expandtab filetype=sh:
function vnc-list
{
	for i in $(sudo virsh list|tail -n +3|awk '{print $2}'|sort); do
    PORTNUM=$(sudo virsh vncdisplay $i|cut -f 2 -d ':')
		printf "% 2d: \033[01;32m%.20s\033[00m\n" "$PORTNUM" "$i";
	done | sort -n
}
