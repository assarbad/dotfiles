# vim: set autoindent smartindent ts=4 sw=4 noet filetype=sh:

[[ "yggdrasil" == "$(hostname -s)" ]] || return
for i in vgcfgbackup vgchange vgconvert vgdisplay vgextend vgimportclone vgmknodes vgremove vgs vgsplit vgcfgrestore vgck vgcreate vgexport vgimport vgmerge vgreduce vgrename vgscan pvchange pvck pvcreate pvdisplay pvmove pvremove pvresize pvs pvscan; do
	alias $i="sudo $i"
done
