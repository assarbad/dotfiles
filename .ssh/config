# ProxyCommand ssh user@proxy nc %h %p 2> /dev/null
Host *
	KbdInteractiveAuthentication=no
	ForwardAgent no
	AddressFamily=inet
	CheckHostIP=yes
	ServerAliveCountMax=6
	ServerAliveInterval=60
	TCPKeepAlive=yes
	#VerifyHostKeyDNS=yes

Host yggdrasil yggdrasil.assarbad.net
	HostKeyAlias yggdrasil
	HostName yggdrasil.assarbad.net
	ForwardAgent yes

Host ginnungagap ginnungagap.assarbad.net
	HostKeyAlias ginnungagap-ovh
	HostName ginnungagap.assarbad.net
	ForwardAgent no

# Connection to Github, Gitlab and Bitbucket via SSH
Host bitbucket.locid
	HostName bitbucket.org
	HostKeyAlias bitbucket.org
	IdentityFile %d/.ssh/id_rsa
	IdentitiesOnly yes

Host gitlab.locid
	HostName gitlab.com
	HostKeyAlias gitlab.com
	User git
	IdentityFile %d/.ssh/id_rsa
	IdentitiesOnly yes

Host github.locid
	HostName github.com
	HostKeyAlias github.com
	User git
	IdentityFile %d/.ssh/id_rsa
	IdentitiesOnly yes

