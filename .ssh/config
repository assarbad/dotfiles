# ProxyCommand ssh user@proxy nc %h %p 2> /dev/null
Host *
	KbdInteractiveAuthentication=no
	ForwardAgent no
	AddressFamily=inet
	CheckHostIP=yes
	ServerAliveCountMax=6
	ServerAliveInterval=60
	TCPKeepAlive=yes
	#VerifyHostKeyDNS=yes

Host yggdrasil yggdrasil.assarbad.net
	HostKeyAlias yggdrasil
	HostName yggdrasil.assarbad.net
	ForwardAgent yes

Host sif gandalfr sif.yggdrasil gandalfr.yggdrasil
	Port 22022
	ForwardAgent yes

Host sif.yggdrasil gandalfr.yggdrasil
	ProxyCommand ssh -W %h:%p yggdrasil

Host sif sif.yggdrasil
	HostKeyAlias sif
	HostName sif.assarbad.net
	ForwardAgent no

Host gandalfr gandalfr.yggdrasil
	HostKeyAlias gandalfr
	HostName gandalfr.assarbad.net
	ForwardAgent no

Host ginnungagap ginnungagap.assarbad.net
	HostKeyAlias ginnungagap
	HostName ginnungagap.assarbad.net
	ForwardAgent no

Host yggdrasil-old yggdrasil-old.assarbad.net
	HostKeyAlias yggdrasil-old
	HostName yggdrasil-old.assarbad.net
	ForwardAgent yes

Host fafnir-old skalli-old sleipnir-old mail.lan ymir hymir loki hati
	ProxyCommand ssh -W %h:%p yggdrasil-old
	ForwardAgent yes
