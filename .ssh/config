Host *
	KbdInteractiveAuthentication=no
	ForwardAgent=no
	AddressFamily=inet
	CheckHostIP=yes
	ServerAliveCountMax=6
	ServerAliveInterval=60
	TCPKeepAlive=yes
	SendEnv=
	#VerifyHostKeyDNS=yes

