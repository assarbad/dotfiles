# Connection to Github, Gitlab and Bitbucket via SSH
Host bitbucket.locid
	HostName bitbucket.org
	HostKeyAlias bitbucket.org
	IdentityFile %d/.ssh/id_rsa
	IdentitiesOnly yes

Host gitlab.locid
	HostName gitlab.com
	HostKeyAlias gitlab.com
	User git
	IdentityFile %d/.ssh/id_rsa
	IdentitiesOnly yes

Host github.locid
	HostName github.com
	HostKeyAlias github.com
	User git
	IdentityFile %d/.ssh/id_rsa
	IdentitiesOnly yes

